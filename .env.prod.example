# Production environment variables
# Copy this file to .env.prod and fill in real values

# Readwise API Token (required)
# Get yours at: https://readwise.io/access_token
READWISE_TOKEN=your_production_readwise_token

# MCP Server Authentication Token (required)
# Generate with: openssl rand -base64 32
MCP_BEARER_TOKEN=your_production_bearer_token

# Server Configuration
PORT=8080
MCP_PATH=/mcp
